# ============================================
# ‚è±Ô∏è TIMING & BEHAVIOR CONFIGURATION
# ============================================

# How long to keep current stats in cache before fetching fresh data (seconds)
# Default: 86400 (24 hours)
STATS_CACHE_TTL=86400

# How many days to keep stats history for trend analysis (days)
# Default: 90 (3 months)
STATS_HISTORY_RETENTION=90

# How often to save stats snapshots to Redis history (seconds)
# This prevents excessive writes and controls data granularity
# Default: 60 (1 minute) - Saves a snapshot every minute
# Recommended: 30-300 seconds depending on your needs
STATS_SAVE_INTERVAL=60

# How often milestone checker waits before checking again (seconds)
# Default: 7200 (2 hours)
MILESTONE_CHECK_THROTTLE=7200

# How long to keep milestone history records (days)
# Default: 30
MILESTONE_HISTORY_RETENTION=30

# How often the UI auto-refreshes stats display (seconds)
# Default: 300 (5 minutes)
AUTO_REFRESH_INTERVAL=300

# Cooldown between manual refresh button clicks (seconds)
# Default: 30
MANUAL_REFRESH_COOLDOWN=30

# Delay before starting first milestone check on page load (seconds)
# Default: 5
MILESTONE_CHECK_DELAY=5

# API request timeout (seconds)
# Default: 30
API_TIMEOUT=30

# Maximum milestone check logs to keep in browser storage
# Default: 5
MILESTONE_CHECK_LOG_MAX=5

